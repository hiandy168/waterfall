.section-header{
  overflow:hidden;
  display: flex;
  flex-direction: column;
  margin-top:100rpx;
  align-items: center;
}
.avatar {
  width: 128rpx;
  height: 128rpx;
  margin:40rpx 0 100rpx;
  border-radius: 50%;
  background-size:cover;
}
.section{
    overflow:hidden;
    display:flex;
    flex-direction:column;
    padding:0 20rpx;
}
.item{
    display:flex;
    flex:1;
    flex-direction:row;
    height:60rpx;
    line-height:60rpx;
    margin-bottom:40rpx;
    font-size:28rpx;
    box-sizing:border-box;
}
.color{
    color:#ddd;
}
.item .user, .item .pwd, .item .sex, .item .remeber{
    flex:2;
    text-align:right;
    margin-right:20rpx;
}
.item input, .item radio-group, .item switch{
    flex:8;  
}
.item input{
    padding-left:20rpx;
    border:1px solid #ddd;
    border-radius:8rpx;
}
.item radio-group label{
    margin-right:20rpx;
}
.item-btn{
    padding-top:40rpx;
    text-align:center;
}
.item-btn button{
    display:inline-block;
    width:200rpx;
    height:60rpx;
    margin:0 10rpx;
    line-height:60rpx;
    font-size:32rpx;
    color:#fff;
    background:green;
    cursor:pointer;
}